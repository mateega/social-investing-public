<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".GroupsActivity">

    <TextView
        android:id="@+id/tvGroups"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/britanica_black"
        android:letterSpacing="0.02"
        android:text="Groups"
        android:textColor="@color/black"
        android:textSize="35sp" />



    <LinearLayout
        android:id="@+id/layGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:paddingVertical="40dp"
        android:paddingHorizontal="30dp"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:background="@drawable/layout_rounded"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvGroupName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/britanica_black"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:text="Penn Crypto" />

        <TextView
            android:id="@+id/tvGroupAssets1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/britanica_extrabold"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="$824,149.81" />

        <ImageView
            android:id="@+id/ivCheck1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-4dp"
            app:srcCompat="@drawable/ic_baseline_check_24"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:paddingVertical="40dp"
        android:paddingHorizontal="30dp"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:background="@drawable/layout_rounded"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvGroupName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/britanica_black"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:text="Columbia Blockchain" />

        <TextView
            android:id="@+id/tvGroupAssets2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/britanica_extrabold"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="$824,149.81" />

        <ImageView
            android:id="@+id/ivCheck2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-4dp"
            app:srcCompat="@drawable/ic_baseline_check_24"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layGroup3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:paddingVertical="40dp"
        android:paddingHorizontal="30dp"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:background="@drawable/layout_rounded"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvGroupName3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/britanica_black"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:text="Tom's Alt Coin Fund" />

        <TextView
            android:id="@+id/tvGroupAssets3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/britanica_extrabold"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:text="$824,149.81" />

        <ImageView
            android:id="@+id/ivCheck3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-4dp"
            app:srcCompat="@drawable/ic_baseline_check_24"
            />
    </LinearLayout>




</LinearLayout>